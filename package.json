{
  "name": "universal-sql-vmm",
  "version": "2.0.0",
  "description": "A microservice for SQL operations across multiple backends including databases, Redis, Kafka, and blockchain, accessed via gRPC, REST, MQTT",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node run-tests.js",
    "test:unit": "mocha test/unit/**/*.test.js --timeout 5000",
    "test:integration": "mocha test/integration/**/*.test.js --timeout 5000",
    "test:functional": "node run-functional-tests.js",
    "test:db": "node test-db.js",
    "test:sql": "node test-sql.js",
    "test:sql:comprehensive": "node test/sql-comprehensive.js",
    "test:setup": "node test-setup.js",
    "test:load": "node test/load/loadTest.js",
    "test:e2e": "node test/e2e/e2eTest.js",
    "test:all": "npm run test && npm run test:sql:comprehensive && npm run test:load && npm run test:e2e",
    "lint": "eslint .",
    "security:audit": "npm audit"
  },
  "author": "Andrei Besleaga",
  "license": "Apache-2.0",
  "dependencies": {
    "@grpc/grpc-js": "^1.12.6",
    "@grpc/proto-loader": "^0.6.12",
    "@hashgraph/sdk": "^2.17.0",
    "body-parser": "^1.20.4",
    "chai": "^4.3.7",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "express": "^4.22.1",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.1",
    "jsonwebtoken": "^9.0.2",
    "kafka-node": "^5.0.0",
    "knex": "^2.4.2",
    "morgan": "^1.10.1",
    "mqtt": "^4.3.7",
    "node-sql-parser": "^5.3.5",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3",
    "web3": "^4.16.0",
    "winston": "^3.8.2",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "autocannon": "^7.12.0",
    "axios": "^1.12.2",
    "eslint": "^8.49.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^15.0.0"
  }
}
