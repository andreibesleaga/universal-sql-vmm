# Server Configuration
NODE_ENV=development
PORT=3000

# HTTPS Configuration
USE_HTTPS=false
HTTPS_PORT=3443
HTTPS_KEY_PATH=/path/to/key.pem
HTTPS_CERT_PATH=/path/to/cert.pem

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-for-production
JWT_EXPIRATION=1h

# Encryption Configuration
ENCRYPTION_KEY=32-character-aes-key-for-encryption
ENCRYPTION_IV=16-character-iv-for-aes

# Performance Configuration
QUERY_CACHE_TTL=60000
QUERY_CACHE_MAX_SIZE=1000

# Timeout Configuration (in milliseconds)
DATABASE_TIMEOUT=5000
REDIS_TIMEOUT=2000
KAFKA_TIMEOUT=10000
ETHEREUM_TIMEOUT=30000
HEDERA_TIMEOUT=30000
HYPERLEDGER_TIMEOUT=30000

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data.sqlite

# Database Connection Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# MySQL Configuration (optional)
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=test
MYSQL_CONNECTION_STRING=

# PostgreSQL Configuration (optional)
POSTGRES_HOST=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DATABASE=test
POSTGRES_CONNECTION_STRING=

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka Configuration (optional)
KAFKA_HOST=localhost:9092

# Blockchain Configuration (optional)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_PRIVATE_KEY=your-private-key
ETHEREUM_CONTRACT_ADDRESS=0x1234567890abcdef

# Hedera Configuration (optional)
HEDERA_OPERATOR_ID=0.0.xxxx
HEDERA_OPERATOR_KEY=302e020100300506032b657004220420...
HEDERA_CONTRACT_ID=0.0.xxxx

# Hyperledger Configuration (optional)
HYPERLEDGER_CONNECTION_FILE=./connection.json